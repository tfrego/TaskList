<h1> <%= action_name %> </h1>
<%= form_with model: @task do |f| %>
  <%= f.label :name, "Task" %>
  <%= f.text_field :name %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :completion_date, "Completion Date" %>
  <%= f.text_field :completion_date %>

  <%= f.submit button_title, class: "book-button" %>
<% end %>
